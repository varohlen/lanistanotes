<header class="notice p-2 md:pb-2 pb-1 text-center w-full md:border border-b border-t border-white/10 md:rounded shadow-xl bg-panel backdrop-blur-md">
  <div class="max-w-7xl mx-auto flex flex-col items-center justify-center relative">
    <div class="flex items-center gap-2">
      <a href="https://beta.lanista.se" class="hover:opacity-80 transition-opacity">
        <img src="/lanista.png" alt="Lanista Logo" class="h-8" />
      </a>
    </div>
    
    <div class="flex items-center gap-4 absolute right-0 top-1/2 -translate-y-1/2 header-text">
      <a 
        href="https://beta.lanista.se" 
        class="px-4 py-2 rounded font-cinzel text-sm bg-white/20 hover:bg-white/30 transition-colors border border-white/20"
      >
        Tillbaka till spelet
      </a>
      
      <button 
        id="themeToggle"
        class="p-2 rounded bg-white/40 hover:bg-white/50 transition-colors border border-white/30"
        aria-label="Toggle theme"
      >
        <svg 
          class="w-5 h-5 theme-toggle-dark hidden"
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
        </svg>
        <svg 
          class="w-5 h-5 theme-toggle-light"
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('themeToggle');
  const darkIcon = document.querySelector('.theme-toggle-dark');
  const lightIcon = document.querySelector('.theme-toggle-light');
  
  // Check for saved theme preference, otherwise use system preference
  const getTheme = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };

  const setTheme = (theme) => {
    document.documentElement.classList.toggle('light-theme', theme === 'light');
    localStorage.setItem('theme', theme);
    
    // Toggle icons
    darkIcon?.classList.toggle('hidden', theme === 'dark');
    lightIcon?.classList.toggle('hidden', theme === 'light');
  };

  // Set initial theme
  setTheme(getTheme());

  // Handle click events
  themeToggle?.addEventListener('click', () => {
    const currentTheme = getTheme();
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    setTheme(newTheme);
  });
</script>
